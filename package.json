    "bootstrap",
    "scss",
    "sass"
  ],
  "author": "Karl Erik WÃ¸ien <karwoi53055@stud.noroff.no>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/karlwoien/sp2-fed-noroff/issues"
  },
  "homepage": "https://github.com/karlwoien/sp2-fed-noroff#readme",
  "dependencies": {
    "bootstrap": "^5.3.3",
    "live-server": "^1.2.2",
    "sass": "^1.77.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.mjs": [
      "prettier --write",
